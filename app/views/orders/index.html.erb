<%= render "shared/second-header"%>

<div class='transaction-contents'>
  <div class='transaction-main'>
    <h1 class='transaction-title-text'>
      レンタル内容の確認
    </h1>
    <%# 購入内容の表示 %>
    <div class='buy-item-info'>
      <%= image_tag @item.image, class: 'buy-item-img' %>
      <div class='buy-item-right-content'>
        <h2 class='buy-item-text'>
          <%= @item.name %>
        </h2>
        <div class='buy-item-price'>
          <h2 class='buy-item-price'><%= @item.daily_price %></h2>円 /日
          <p class='item-price-sub-text'>出品地域（県）：<%= @item.user.prefecture.name %></p>
          <p class='item-price-sub-text'>出品地域（市）：<%= @item.user.address_city %></p>
          <p class='item-price-sub-text'>貸出終了日：<%= @item.due_date %></p>
        </div>
      </div>
    </div>
    <%# /購入内容の表示 %>

    <%# カード情報の入力 一旦ここは後回しにする%>
   <form> 
    <div class='credit-card-form'>
      <h1 class='info-input-haedline'>
        クレジットカード情報入力
      </h1>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">カード情報</label>
          <span class="indispensable">必須</span>
        </div>
        <input type="text" class="input-default" id="card-number", placeholder="カード番号(半角英数字)">
        <div class='available-card'>
          <%= image_tag 'card-visa.gif', class: 'card-logo'%>
          <%= image_tag 'card-mastercard.gif', class: 'card-logo'%>
          <%= image_tag 'card-jcb.gif', class: 'card-logo'%>
          <%= image_tag 'card-amex.gif', class: 'card-logo'%>
        </div>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">有効期限</label>
          <span class="indispensable">必須</span>
        </div>
        <div class='input-expiration-date-wrap'>
          <input type="text" class="input-expiration-date" id="card-exp-month", placeholder="例)3">
          <p>月</p>
          <input type="text" class="input-expiration-date" id="card-exp-year", placeholder="例)23">
          <p>年</p>
        </div>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">セキュリティコード</label>
          <span class="indispensable">必須</span>
        </div>
        <input class="input-default", id="card-cvc", placeholder="カード背面4桁もしくは3桁の番号">
      </div>
    </div>
  </form>
    <%# /カード情報の入力 %>

    <%# 購入者情報の表示 %>
    <h1 class='transaction-title-text'>
      購入者情報
    </h1>
    <div class='buyers-info'>
      <p class='buyers-sub-text'>購入者氏名：<%= @item.user.first_name %></p>
      <p class='buyers-sub-text'>連絡先Email：<%= @item.user.email %></p>
      <p class='buyers-sub-text'>連絡先TEL：<%= @item.user.phone_number %></p>
    </div>
    

    <%# /購入者情報の表示 %>

  <%# -------------- 一旦カード情報だけ外に出す ------------------- %>
    <%= form_with model:@order, url:"/", id: 'charge-form', class: 'transaction-form-wrap',local: true do |f| %>
    <%= render 'shared/error_messages', model: f.object %>
  <%# /------------------------------------------------------------ %>
    
    <%# 貸出希望日数の入力 %>
    <div class='shipping-address-form'>
      <h1 class='info-input-haedline'>
        支払い金額
      </h1>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">貸出希望日数</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :lending_period, class:"input-default", id:"postal-code", placeholder:"例）123-4567", maxlength:"8" %>
      </div>
 
    </div>
    <%# /配送先の入力 %>

    <div class='buy-btn'>
      <%= f.submit "購入" ,class:"buy-red-btn" %>
    </div>
    <% end %>
  </div>
</div>
<%= render "shared/second-footer"%>